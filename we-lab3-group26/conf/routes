# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /							controllers.Application.index()

# Registration page
GET     /registration				controllers.Registration.index()

# Register
POST    /registration				controllers.Registration.signup()

# call quiz without login-info
GET		/quiz						controllers.Application.index()

# after login
POST	/login						controllers.Application.login()

# startQuiz
# GET		/index					controllers.Play.startGame()

# nextQuestion
POST	/question					controllers.Play.answerQuestion()

# quizover
GET 	/quizover					controllers.Play.finish()

# neue Runde
GET		/question					controllers.Play.newRound()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
